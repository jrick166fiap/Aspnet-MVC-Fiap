@model Fiap.Exemplo005.Web.MVC.Models.Filme

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

@using (Html.BeginForm())
{

    <div  class="form-group">
        @Html.LabelFor(j=>j.Titulo)
        @Html.TextBoxFor(j=>j.Titulo,new  { @class ="form-control" })
        @Html.ValidationMessageFor(j=>j.Titulo,
                            null,new { @class="text-danger"})
    </div>

    <div class="form-group">
        @Html.LabelFor(j=>j.Genero)
        @Html.EnumDropDownListFor(j=>j.Genero,new { @class="form-control"})
        @Html.ValidationMessageFor(j=>j.Genero,
                              null,new { @class="text-danger"})
    </div>

    <div class="form-group">
        @Html.LabelFor(j=>j.Duracao)
        @Html.TextBoxFor(j=>j.Duracao,new { @class="form-control"})
        @Html.ValidationMessageFor(j=>j.Duracao,
                                null,new { @class="text-danger"})
    </div>

    <div class="form-group">
    @Html.LabelFor(j=>j.Lancamento)
    @Html.TextBoxFor(j=>j.Lancamento,new { @class="form-control"})
    @Html.ValidationMessageFor(j=>j.Lancamento,
                                null,new { @class="text-danger"})
    </div>

    <div class="form-group">
        @Html.LabelFor(j => j.Produtora)
        @Html.DropDownListFor(j => j.ProdutoraId,
            ViewBag.produ as SelectList,
             "Selecione", 
            new { @class= "form-control"})
    </div>

    

    <input type="submit" value="Cadastrar" class="btn btn-default"/>

}


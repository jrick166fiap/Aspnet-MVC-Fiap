@model Fiap.Exemplo005.Web.MVC.Models.Produtora
@{
    ViewBag.Title = "Alterar";
}

<h2>Alterar Informações da Produtora</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(j=>j.Nome)
        @Html.TextBoxFor(j=>j.Nome,new { @class="form-control"})
    </div>

    <input type="submit" value="Alterar" class="btn btn-default" />
    @Html.ActionLink("Cancelar","Listar",new {@class="text-danger"})

}


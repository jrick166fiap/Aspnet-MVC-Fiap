@model Fiap.Exemplo004.Web.MVC.Models.Time
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Time</h2>

@using (Html.BeginForm()) {

    <div class="form-group">
        @Html.LabelFor(a=>a.Nome)
        @Html.TextBoxFor(a=>a.Nome, new { @class="form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(a=>a.DataFundacao)
        @Html.TextBoxFor(a=>a.DataFundacao, new { @class="form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(a=>a.Tecnico.Nome)
        @Html.TextBoxFor(a=>a.Tecnico.Nome, new { @class="form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(a=>a.Tecnico.Salario)
        @Html.TextBoxFor(a=>a.Tecnico.Salario, new { @class="form-control"})
    </div>

    <input type="submit" value="Cadastrar" class="btn btn-default" />

}

